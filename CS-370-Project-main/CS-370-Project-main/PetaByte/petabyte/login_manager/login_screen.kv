<LoginScreen>:
    username_input: username
    password_input: password

    canvas.before:
        Color:
            rgba: 0.95, 0.97, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 25

        Label:
            text: "Welcome to PetaByte"
            font_size: 28
            color: 0.2, 0.2, 0.3, 1

        TextInput:
            id: username
            hint_text: "Username"
            font_size: 18
            size_hint_y: None
            height: 50

        TextInput:
            id: password
            hint_text: "Password"
            password: True
            font_size: 18
            size_hint_y: None
            height: 50

        BoxLayout:
            spacing: 20
            size_hint_y: None
            height: 50

            Button:
                text: "Login"
                on_release: root.login()
                background_color: 0.3, 0.6, 0.9, 1

            Button:
                text: "Register"
                on_release: root.register()
                background_color: 0.2, 0.8, 0.4, 1
