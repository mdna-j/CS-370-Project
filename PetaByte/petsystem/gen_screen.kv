<PetScreen>:
    canvas.before:
        Color:
            rgba: 0.95, 0.97, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        FloatLayout:
            Image:
                source: 'PetaByte/petsystem/default_back.png'
                size_hint_y: 1
                size_hint_x: 1.5
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Image:
                source: 'PetaByte/petsystem/default_pet.gif'
                size: .3,.3
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                text: "Happiness Level"
                size_hint_y: 0.15
                color: 0.2, 0.2, 0.3, 1
                pos_hint: {'center_x': 0.5, 'center_y': 0.15}
            ProgressBar:
                max: 100
                value: root.happiness
                height: 20
                size_hint_y: 0.1
                pos_hint: {'center_x': 0.5, 'center_y': 0.1}

            Label:
                text: "Hunger Level"
                size_hint_y: 0.15
                color: 0.2, 0.2, 0.3, 1
                pos_hint: {'center_x': 0.5, 'center_y': 0.05}
            ProgressBar:
                max: 100
                value: root.hunger
                height: 20
                size_hint_y: 0.10
                pos_hint: {'center_x': 0.5, 'center_y': 0}


        BoxLayout:
            orientation: 'horizontal'
            spacing: 20
            size_hint_y: 0.2

            Button:
                text: "Feed Pet"
                on_press: root.feed_pet()

            Button:
                text: "Clean Pet"
                on_press: root.clean_pet()

            Button:
                text: "Pet Pet"
                on_press: root.pet_pet()

            Button:
                text: "Delete Account"